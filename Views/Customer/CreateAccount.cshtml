@using banking.Models
@model Account

<div>
    <h3>Create an account</h3>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreateAccount" asp-controller="Customer" method="post">
                <div class="form-group">
                    <label asp-for="TypeOfAccount">Type of Account</label>
                    <select asp-for="TypeOfAccount" class="form-control">
                        <option>Select type of Account</option>
                        <option>Checkings</option>
                        <option>Savings</option>
                    </select>
                    <span asp-validation-for="TypeOfAccount" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Amount"></label>
                    <input asp-for="Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default">Create Account</button>
                </div>
            </form>
        </div>
    </div>
</div>